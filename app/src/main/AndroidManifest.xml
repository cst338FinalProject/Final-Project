<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jesusandresbernallopez.project2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateActivity"
            android:label="@string/title_activity_create"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ReserveSeat"
            android:label="@string/title_activity_reserve_seat"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CancelReservation"
            android:label="@string/title_activity_cancel_reservation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ManageSystem"
            android:label="@string/title_activity_manage_system"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SystemLogs"
            android:label="@string/title_activity_system_logs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConfirmSeatReservation"
            android:label="@string/title_activity_confirm_seat_reservation"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>